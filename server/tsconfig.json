{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"baseUrl": "./",
		"paths": {
      "*": ["src/*", "node_modules/*"]
    }
	},
	"include": ["src", "types"],
	"exclude": ["node_modules", ".vscode-test"]
}
